<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TalkWave" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceContainer">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>

        <item name="android:fontFamily">@font/pretendard_medium </item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.TalkWave" parent="Base.Theme.TalkWave" />

    <style name="Style.BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
        <item name="android:color">@color/secondary</item>
        <item name="shapeAppearance">@style/Style.BottomNavigationView.ShapeAppearance</item>
    </style>

    <style name="Style.BottomNavigationView.ShapeAppearance" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>